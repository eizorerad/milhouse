{
	"name": "milhouse-cli",
	"version": "1.0.0",
	"description": "Correctness-first AI coding orchestrator - Evidence-based diagnostics, WBS planning, and iterative execution",
	"type": "module",
	"packageManager": "pnpm@9.15.0",
	"main": "dist/index.js",
	"bin": {
		"milhouse": "./bin.js"
	},
	"files": [
		"dist",
		"bin.js",
		"README.md"
	],
	"scripts": {
		"dev": "bun run src/index.ts",
		"build": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile dist/milhouse-linux-x64 && bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile dist/milhouse-darwin-arm64 && bun build src/index.ts --compile --target=bun-darwin-x64 --outfile dist/milhouse-darwin-x64 && bun build src/index.ts --compile --target=bun-windows-x64 --outfile dist/milhouse-windows-x64.exe",
		"build:linux": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile dist/milhouse-linux-x64",
		"build:mac-arm": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile dist/milhouse-darwin-arm64",
		"build:mac-x64": "bun build src/index.ts --compile --target=bun-darwin-x64 --outfile dist/milhouse-darwin-x64",
		"build:windows": "bun build src/index.ts --compile --target=bun-windows-x64 --outfile dist/milhouse-windows-x64.exe",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf dist node_modules .bun-build*",
		"clean:state": "node scripts/clean-state.mjs",
		"prepare": "echo 'Ready to build'",
		"check:byte-identical": "node scripts/byte-identical-check.mjs",
		"check:similarity": "node scripts/similarity-check.mjs",
		"check:tokens": "node scripts/forbidden-tokens-check.mjs",
		"check:independence": "npm run check:byte-identical && npm run check:similarity && npm run check:tokens",
		"smoke-test": "node scripts/smoke-test.mjs",
		"test:golden": "bun test tests/golden/",
		"test:golden:update": "UPDATE_SNAPSHOTS=1 bun test tests/golden/",
		"check:safety": "npm run test && npm run typecheck && npm run lint && npm run test:golden && npm run check:independence"
	},
	"keywords": [
		"ai",
		"coding",
		"automation",
		"claude",
		"correctness",
		"planner",
		"executor",
		"evidence-based",
		"wbs",
		"cli"
	],
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/milhouse/milhouse"
	},
	"dependencies": {
		"@inquirer/prompts": "^8.2.0",
		"@octokit/rest": "^21.0.0",
		"bottleneck": "^2.19.5",
		"chalk": "^5.6.2",
		"commander": "^13.0.0",
		"diff": "^8.0.3",
		"globby": "^16.1.0",
		"mitt": "^3.0.1",
		"nanospinner": "^1.2.0",
		"node-notifier": "^10.0.1",
		"ora": "^9.1.0",
		"p-limit": "^7.2.0",
		"picocolors": "^1.1.1",
		"pino": "^10.2.1",
		"prompts": "^2.4.2",
		"proper-lockfile": "^4.1.2",
		"yaml": "^2.7.0",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"@types/bun": "^1.1.0",
		"@types/diff": "^8.0.0",
		"@types/node-notifier": "^8.0.5",
		"@types/prompts": "^2.4.9",
		"@types/proper-lockfile": "^4.1.4",
		"pino-pretty": "^13.1.3",
		"typescript": "^5.9.3"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=9.0.0"
	}
}
