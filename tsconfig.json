 {
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"lib": ["ES2022"],
		"types": ["bun-types"]
	},
	"include": ["src/**/*", "tests/**/*"],
	"exclude": ["node_modules", "dist", "src/_quarantine"]
}
